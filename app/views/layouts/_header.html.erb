<header>
	<div class="row">
		<div class="col-sm-2">
			<%= link_to root_path do %>
				<h1>VegeBlog</h1>
			<% end %>
		</div>
		<div class="lien col-sm-8">
			<% if current_user && current_user.admin? %>
			<%= link_to "Users", users_index_path %>
			<%= link_to "Articles", articles_path %>
			<%= link_to "Commentaires", comments_path %>
			<% end %>
			<% if current_user %>
			<%= link_to "Profil", users_show_path(id: current_user.id) %>
			<%= link_to "Deconnexion", destroy_user_session_path, method: :delete %>
			<% else %>
			<%= link_to "Connexion", new_user_session_path %>
			<%= link_to "Inscription", new_user_registration_path %>
			<% end %>
		</div>
		<div class="col-sm-2">
			<%= link_to '#' do %>
				<i class="fa fa-facebook social"></i>
			<% end %>
			<%= link_to '#' do %>
				<i class="fa fa-twitter social"></i>
			<% end %>
			<%= link_to '#' do %>
				<i class="fa fa-instagram social"></i>
			<% end %>
		</div>
	</div>
</header>
