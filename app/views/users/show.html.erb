<div id="user_show">

	<div class="row detail_user text-center">
		<div class="col-md-3 col-md-offset-3 photo_bloc">
			<%= image_tag @user.photo, class: "photo" %>
		</div>
		<div class="col-sm-3">
			<h3><%= @user.lastname %></3>
			<h4><%= @user.firstname %></h4>
			<p><%= @user.email %></p>
			<% if current_user.id == @user.id %>
				<%= link_to "edit", edit_user_registration_path, class: "btn btn-info" %>
			<% end %>
		</div>
	</div>

		<div class="detail_comment">
			<h3>Mes commentaires</h3>
			<table class="table table-str">
				<thead>
					<tr>
						<th>Titres</th>
						<th>Commentaires</th>
						<th>Nb de likes</th>
					</tr>
				</thead>
				<tbody>
					<% @user.comments.each do |comment| %>
							<tr>
								<td><%= comment.article.title %></td>
								<td><%= comment.text %></td>
								<td>
									<div class="dropdown">
										<button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown">
								  	<%= "#{comment.likes.count} likes" %><span class="caret"></span>
										</button>
										<ul class="dropdown-menu">
											<% comment.likes.each do |like| %>
												<li>- <%= like.user.lastname %> <%= like.user.firstname %></li>
											<% end %>
										</ul>
									</div>
								</td>
						  <tr>
					<% end %>
				</tbody>
			</table>
		</div>

