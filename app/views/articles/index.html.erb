
<% if notice %>
  <div class="alert alert-info alert-dismissable animated tada fade in text-center">
    <button class="close" data-dismiss="alert">&times;</button>
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<div class="text-center">
  <%= link_to 'Nouvel Article', new_article_path, class: "btn btn-info" %>
</div>

<br>
<h4 class="text-center">Liste des articles en ligne</h4>
<br>
<div class="table-responsive">
  <table class="table table-striped">
    <tbody>
      <% @articles.each do |article| %>
        <% if article.status == 'En ligne' %>
          <tr>
            <td><%= article.title %></td>
            <td><%= link_to 'Détails', article %></td>
            <td><%= link_to 'Modifier', edit_article_path(article) %></td>
            <td><%= link_to 'Supprimer', article, method: :delete, data: { confirm: 'Êtes-vous sûr ??' } %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

