<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Tit</th>
      <th>Text</th>
      <th>Photo</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <% if article.status == "En attente" %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.text %></td>
          <td><%= article.photo %></td>
          <td><%= article.status %></td>
          <td><%= link_to 'DÃ©tails', article %></td>
          <td><%= link_to 'Modifier', edit_article_path(article) %></td>
          <td><%= link_to 'Supprimer', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

